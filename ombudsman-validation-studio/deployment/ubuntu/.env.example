# ================================================
# Ombudsman Validation Studio - Configuration File
# ================================================
#
# This is an example configuration file.
# Copy this file to .env and update with your values.
#
# SECURITY WARNING:
# - Never commit .env file to version control
# - Use strong passwords
# - Generate a secure JWT secret key
#

# ================================================
# SQL Server Configuration (Source Database)
# ================================================
# SQL Server host (IP address or hostname)
SQL_SERVER_HOST=192.168.1.100

# SQL Server port (default: 1433)
SQL_SERVER_PORT=1433

# SQL Server username
SQL_SERVER_USER=sa

# SQL Server password
SQL_SERVER_PASSWORD=YourStrongPassword123!

# SQL Server database name (your source data warehouse)
SQL_SERVER_DATABASE=SampleDW

# ================================================
# Snowflake Configuration (Target Database)
# ================================================
# Snowflake account identifier (e.g., xy12345.us-east-1.aws)
SNOWFLAKE_ACCOUNT=your-account.region.cloud

# Snowflake username
SNOWFLAKE_USER=your-snowflake-user

# Snowflake password
SNOWFLAKE_PASSWORD=YourSnowflakePassword123!

# Snowflake warehouse
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Snowflake database
SNOWFLAKE_DATABASE=SAMPLEDW

# Snowflake schema
SNOWFLAKE_SCHEMA=PUBLIC

# ================================================
# Application Ports
# ================================================
# Frontend web interface port
FRONTEND_PORT=3000

# Backend API port
BACKEND_PORT=8000

# ================================================
# OVS Studio Database Configuration
# ================================================
# This database stores application data:
# - User accounts and authentication
# - Projects and configurations
# - Validation results and history
#
# NOTE: Create this database before starting the application:
#   CREATE DATABASE ovs_studio;

# Database host (usually same as SQL_SERVER_HOST)
OVS_DB_HOST=192.168.1.100

# Database port
OVS_DB_PORT=1433

# Database name (must exist before starting app)
OVS_DB_NAME=ovs_studio

# Database username
OVS_DB_USER=sa

# Database password
OVS_DB_PASSWORD=YourStrongPassword123!

# ================================================
# JWT Authentication Configuration
# ================================================
# Secret key for JWT tokens (MUST BE CHANGED!)
# Generate a secure random string (32+ characters)
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=change-this-to-a-very-long-random-secret-key-at-least-32-characters

# JWT algorithm (keep as HS256 unless you know what you're doing)
JWT_ALGORITHM=HS256

# Access token expiration time (in minutes)
# Default: 30 minutes
# For development: 1440 (24 hours)
# For production: 30 (30 minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================================
# Application Configuration
# ================================================
# Application environment (development or production)
APP_ENV=production

# Enable debug mode (true/false)
# WARNING: Never enable in production!
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ================================================
# CORS Configuration (Optional)
# ================================================
# Allow Cross-Origin requests from these domains
# For development, use: http://localhost:3000
# For production, use your domain: https://your-domain.com
# Multiple origins: origin1.com,origin2.com
CORS_ORIGINS=http://localhost:3000

# ================================================
# Database Connection Pool Settings (Optional)
# ================================================
# Maximum number of database connections
# Increase for high-traffic deployments
DB_POOL_SIZE=10

# Maximum overflow connections
DB_MAX_OVERFLOW=20

# Connection timeout (seconds)
DB_POOL_TIMEOUT=30

# ================================================
# Performance Settings (Optional)
# ================================================
# Number of worker processes for backend
# Set to number of CPU cores
WORKERS=4

# Enable query caching (true/false)
ENABLE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL=300

# ================================================
# Email Configuration (Optional)
# ================================================
# For sending notification emails
# Leave blank if not using email notifications

# SMTP server
SMTP_HOST=

# SMTP port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username
SMTP_USER=

# SMTP password
SMTP_PASSWORD=

# From email address
SMTP_FROM_EMAIL=noreply@your-domain.com

# Enable TLS (true/false)
SMTP_USE_TLS=true

# ================================================
# Backup Configuration (Optional)
# ================================================
# Automated backup location
BACKUP_DIR=/opt/ombudsman-studio/backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ================================================
# Notes:
# ================================================
# 1. After editing, save this file as .env in the same directory
# 2. Restart the application to apply changes:
#    docker compose down && docker compose up -d
# 3. Never share or commit this file with real credentials
# 4. Keep a backup of this file in a secure location
# 5. For production, use a secrets management system
#
# For more information, see:
# - Deployment Guide: ../DEPLOYMENT_GUIDE.md
# - Troubleshooting: ../TROUBLESHOOTING.md
