# Ombudsman Validation Studio - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SQL Server Connection
# =============================================================================
MSSQL_HOST=sqlserver
MSSQL_PORT=1433
MSSQL_DATABASE=SampleDW
MSSQL_USER=sa
MSSQL_PASSWORD=YourStrong!Passw0rd

# Alternative: Use connection string directly
# SQLSERVER_CONN_STR=Driver={ODBC Driver 18 for SQL Server};Server=localhost,1433;Database=SampleDW;UID=sa;PWD=password;TrustServerCertificate=yes;

# =============================================================================
# Snowflake Connection
# =============================================================================
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_ACCOUNT=abc12345.us-east-1  # Your Snowflake account identifier
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=SAMPLEDW
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ACCOUNTADMIN  # Optional - defaults to user's default role

# =============================================================================
# Sample Data Generation
# =============================================================================
SAMPLE_DIM_COUNT=3        # Number of dimension tables to generate
SAMPLE_FACT_COUNT=2       # Number of fact tables to generate
SAMPLE_DIM_ROWS=50        # Rows per dimension table
SAMPLE_FACT_ROWS=200      # Rows per fact table
BROKEN_FK_RATE=0.05       # Rate of broken foreign keys (for testing)
SAMPLE_SEED=12345         # Random seed for reproducibility
SAMPLE_SOURCE=both        # Source: sqlserver, snowflake, or both

# =============================================================================
# Results Database (Optional - for historical tracking)
# =============================================================================
# If not configured, results will only be saved as JSON files
# Uses SQL Server for consistency with validation databases

# Results database connection (can be same as MSSQL or different)
RESULTS_DB_HOST=sqlserver
RESULTS_DB_PORT=1433
RESULTS_DB_NAME=OmbudsmanResults
RESULTS_DB_USER=sa
RESULTS_DB_PASSWORD=YourStrong!Passw0rd

# Note: If RESULTS_DB_* variables are not set, the system will fall back to MSSQL_* variables
# To create the results database, run: sqlcmd -S localhost -U sa -P password -i backend/database/schema.sql

# =============================================================================
# Application Settings
# =============================================================================
# API Port
API_PORT=8000

# Frontend Port
FRONTEND_PORT=3000

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# =============================================================================
# Security (Production)
# =============================================================================
# JWT Secret (for authentication - generate with: openssl rand -hex 32)
# JWT_SECRET=your_secret_key_here

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Optional: Advanced Settings
# =============================================================================
# Connection Pool Size
# DB_POOL_SIZE=5

# Query Timeout (seconds)
# QUERY_TIMEOUT=300

# Max Retry Attempts
# MAX_RETRIES=3

# Retry Delay (seconds)
# RETRY_DELAY=2
